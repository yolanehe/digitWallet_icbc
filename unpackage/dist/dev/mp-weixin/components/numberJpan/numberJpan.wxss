#numberJpanActive {
  background-color: #2c9dfe;
  color: #FFFFFF;
}
.jpan {
  width: 100vw;
  height: 30vh;
  background-color: #FFFFFF;
  position: absolute;
  bottom: 0;
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
  -webkit-transition: all .5s;
  transition: all .5s;
}
.jpan .nav {
  text-align: center;
  line-height: 50rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #EEEEEE;
}
.jpan .main {
  width: 100%;
  height: calc(30vh - 50rpx);
}
.jpan .main view {
  box-sizing: border-box;
  float: left;
  width: 33.33%;
  height: 25%;
  font-size: 40rpx;
  text-align: center;
  line-height: 7.5vh;
  border: 1px solid #f4f4f4;
}
.jpan .main view:active {
  background-color: #EEEEEE;
}
.numberJpan {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0);
  -webkit-transition: all .5s;
  transition: all .5s;
  z-index: 999;
}
.numberJpan .myshuru {
  -webkit-transition: all .5s;
  transition: all .5s;
  position: absolute;
  width: 70vw;
  height: 350rpx;
  top: 50%;
  opacity: 0;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  left: 50%;
  color: #000000;
  border-radius: 20rpx;
  overflow: hidden;
}
.numberJpan .myshuru .shuruTitle {
  margin-left: 100rpx;
  margin-right: 100rpx;
  font-weight: 900;
  text-align: center;
  font-size: 30rpx;
}
.numberJpan .myshuru .center-x {
  width: 90%;
  height: 80rpx;
  border: 1px solid #EEEEEE;
  border-radius: 20rpx;
  position: absolute;
  overflow: hidden;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  bottom: 50rpx;
}
.numberJpan .myshuru .center-x .srk {
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  float: left;
  box-sizing: border-box;
  border-left: 1px solid #EEEEEE;
  -webkit-transition: all .4s;
  transition: all .4s;
}
.numberJpan .myshuru .center-x .srk:nth-child(1) {
  border-left: 0px;
  border-radius: 20rpx 0 0 20rpx;
}
.gb {
  position: absolute;
  font-size: 50rpx;
  top: 0;
  color: #AAAAAA;
  left: 30rpx;
  -webkit-transition: all .5s;
  transition: all .5s;
}
